<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- Vehicle Types -->
    <vType id="passenger" accel="2.6" decel="4.5" sigma="0.5" length="4.3" maxSpeed="55.55"/>
    <vType id="truck" accel="1.8" decel="4.0" sigma="0.5" length="12.0" maxSpeed="44.44"/>

    <!-- Routes assuming default netgenerate edge IDs (e.g., N_to_C, C_to_S) -->
    <route id="N_to_S_route" edges="N_to_C C_to_S"/>
    <route id="E_to_W_route" edges="E_to_C C_to_W"/>
    <route id="S_to_N_route" edges="S_to_C C_to_N"/>
    <route id="W_to_E_route" edges="W_to_C C_to_E"/>

    <!-- Traffic flows - high volume for testing -->
    <flow id="flow_N_S" route="N_to_S_route" begin="0" end="3600" vehsPerHour="3000" type="passenger"/>
    <flow id="flow_E_W" route="E_to_W_route" begin="0" end="3600" vehsPerHour="3000" type="passenger"/>
    <flow id="flow_S_N" route="S_to_N_route" begin="0" end="3600" vehsPerHour="3000" type="passenger"/>
    <flow id="flow_W_E" route="W_to_E_route" begin="0" end="3600" vehsPerHour="3000" type="passenger"/>

    <!-- Truck Traffic (also high volume for testing) -->
    <flow id="truck_N_S" route="N_to_S_route" begin="0" end="3600" vehsPerHour="500" type="truck"/>
    <flow id="truck_E_W" route="E_to_W_route" begin="0" end="3600" vehsPerHour="500" type="truck"/>

</routes>
